<h1>
  List of all directors
</h1>

<hr>

<form action="/insert_director" method="post">
  <div>
    <label for="name_box">Name</label>
    <input type="text" id="name_box" name="query_name"></input>
  </div>
  <div>
    <label for="date_box">Dob</label>
    <input type="date" id="date_box" name="query_dob"></input>
  </div>
  <div>
    <label for="bio_box">Bio</label>
    <textarea id="bio_box" name="query_bio" rows="3"></textarea>
  </div>
  <div>
    <label for="image_url_box">Image</label>
    <input type="text" id="image_url_box" name="query_image"></input>
  </div>
  <button>Create director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
